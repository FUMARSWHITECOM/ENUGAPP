<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensor_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sensor_card_view"
    android:layout_margin="5dp">
    <ImageView
        android:id="@+id/sensor_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingLeft="15dp" />
    <TextView
        android:id="@+id/sensor_name"
        android:layout_below="@id/sensor_image"
        android:text="Thermometer"
        android:paddingLeft="15dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        style="@style/sensorItemName"/>
    <TextView
        android:id="@+id/sensor_location"
        android:layout_below="@id/sensor_name"
        android:text="장소입니다"
        style="@style/sensorItemLocation"/>
</RelativeLayout>